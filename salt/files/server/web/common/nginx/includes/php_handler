# Common PHP configuration
# ------------------------
# Specify the following in the server configuration file wherever PHP is expected
	## [Enable PHP Handler]
	#include includes/common/php_common;
	#

# PHP handling
location ~* \.php$ {
	try_files $uri =404;
	# Example: fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
	# NOTE: Following generated by Salt, auto-detecting php*-fpm.sock filename
	fastcgi_pass unix:{{-
		salt['file.find']('/var/run/php', type='s', name='php*-fpm.sock', mindepth=1, maxdepth=1)|first()
	-}};
	fastcgi_index index.php;
	include fastcgi.conf;
}
